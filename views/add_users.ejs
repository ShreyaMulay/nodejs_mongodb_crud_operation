<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">

            <form action="/add" method="post" id="add-form" enctype="multipart/form-data">

                <div class="card text-center">
                    <div class="card-body">
                        <div class="card-header bg-primary" style="border-radius: 0.375rem;
                        margin-bottom: 10px;">
                            <h3 class="text-light">
                                Add User Details
                            </h3>
                        </div>

                    <div class="form-group mb-3 card-text">
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter Name" required>
                    </div>

                    <div class="form-group  mb-3 card-text">
                        <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                    </div>

                    <div class="form-group  mb-3 card-text">
                        <input type="tel" class="form-control" name="phone" id="phone"  placeholder="Enter Phone Number" required>
                    </div>

                    <div class="form-group  mb-3 card-text">
                        <input type="file" name="image" class="form-control" id="image"  placeholder="Enter Phone Number" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Add User</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
