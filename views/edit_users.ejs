<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card text-center card-body">
                
                <div class="card-header bg-primary" style="border-radius: 0.375rem;
                margin-bottom: 10px;">
                    <h3 class="text-light">
                        Edit User (<%= user.name %>)
                    </h3>

                </div>
                <form action="/update/<%= user._id%>" method="post" id="add-form" enctype="multipart/form-data">
                    
                    <div class="form-group mb-3 card-text">
                        <input type="text" class="form-control form-control-lg" name="name" id="name" value="<%= user.name %>" placeholder="Enter Name" required>
                    </div>

                    <div class="form-group mb-3 card-text">
                    <input type="email" class="form-control form-control-lg" name="email" id="email" aria-describedby="emailHelp" value="<%= user.email %>" placeholder="Enter email" required>
                    </div>
                
                    <div class="form-group mb-3 card-text">
                        <input type="tel" class="form-control form-control-lg" name="phone" id="phone" value="<%= user.phone %>" placeholder="Enter Phone Number" required>
                    </div>
                    <div class="form-group mb-3 card-text">
                        <input type="file" name="image" class="form-control form-control-lg" id="image"  placeholder="Enter Phone Number">
                        <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1" />
                    </div>
                    <input type="hidden" name="old-image" value="<%= user.image %>" />
                    
                    <button type="submit" class="btn btn-primary btn-lg">Update User</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
